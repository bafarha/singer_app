<div ng-controller="OrdersCtrl">
	<h1>Orders</h1>

	<form class="form-inline" ng-submit="addOrder()">
		<strong>Add order: </strong>

		<input type="hidden" value="{{orders[orders.length - 1].id + 1 }}">
		<select ng-model="newOrder.product_id" class="form-control">
			<option value="" disabled selected>Select an album</option>
			<option ng-repeat="product in products" value="{{product.id}}">{{product.name}}</option>
		</select>
		<input type="number" step="0.01" class="form-control" placeholder = "Quantity" ng-model="newOrder.total">
		<input type="submit" value="+" class="btn btn-success">
	</form>

	<table class="table table-hover">
		<thead>
			<td>Order ID</td>
			<td>Album</td>
			<td>Cover</td>
			<td>Quantity</td>
			<td>Price</td>
			<td></td>
		</thead>
		<tr ng-repeat = "order in orders | orderBy: '-id':reverse">
			<td>
				{{order.id}}
			</td>
			<td>
				{{order.product.name}}
				<small ng-show="order.id"><br>{{order.user.email}}</small>
			</td>
			<td>
				<img src ="{{order.product.image_url}}">
			</td>
			<td>
				{{order.total}}
			</td>
			<td>
				{{order.product.price}}
			</td>
			<td>
				<button ng-click="deleteOrder(order)" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
			</td>
		</tr>
	</table>
</div>
