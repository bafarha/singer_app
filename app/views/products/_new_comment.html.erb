<% if signed_in? %>
    <h4>Add a review:</h4>
    <%= form_for([@product, @product.comments.build]) do |f| %>
      <p>
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body %>
      </p>
      <!--<p>
        <%= f.label :rating %><br>
        <%= f.text_field :rating, class: "rating" %>
      </p>-->
      <p><div class="rating"></div>
          <!--<img alt="1" src="/assets/star-off.png" title="bad">
          <img alt="2" src="/assets/star-off.png" title="poor">
          <img alt="3" src="/assets/star-off.png" title="average">
          <img alt="4" src="/assets/star-off.png" title="above average">
          <img alt="5" src="/assets/star-off.png" title="amazing">-->
      </p>
      <p>
        <%= submit_tag "Submit" %>
      </p>
    <% end %>
<% end %>    

<div class="product-reviews">
    <% @comments.each do |comment| %>
        <div class="row">
            <hr>
            <p><%= comment.user.first_name %>  <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
            <div class="rated" data-score="<%= comment.rating %>"></div>
            <!--<p><%= "Rating: #{comment.rating}/5" %></p>-->
            <p><%= comment.body %></p>
        </div>
    <% end %>
</div>



